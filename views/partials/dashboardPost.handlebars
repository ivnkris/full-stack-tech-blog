<div class="card mb-5">
  <div class="card-header">
    <h4 class="card-title"><a
        href="/posts/{{id}}"
        class="link-dark"
      >{{title}}</a></h4>
    <h6 class="card-subtitle mb-2">Posted by
      {{user.username}}
      on
      {{createdAt}}</h6>
  </div>
  <div class="card-body">
    <p class="card-text">{{body}}</p>
  </div>
  <div class="text-center">
    <a
      href="/dashboard/edit/{{id}}"
      class="btn btn-success card-link mb-3 w-100"
    >Edit Blog Post</a>
    <button
      data-id="{{id}}"
      name="delete-btn"
      class="btn btn-danger card-link mb-3 mx-0 w-100"
    >Delete Blog Post</button>
  </div>
</div>