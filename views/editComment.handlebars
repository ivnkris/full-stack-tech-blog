{{> privateNavbar}}
<div
  class="
    position-absolute
    top-50
    start-50
    translate-middle
    text-center
    w-50
  "
>
  <form name="edit-comment-form" id={{id}}>
    <div class="mb-3">
      <textarea
        type="text"
        class="form-control"
        id="message"
        placeholder="Message"
      >{{message}}</textarea>
    </div>
    <div class="mb-3 d-grid gap-2">
      <button type="submit" class="btn btn-primary mb-3">Save</button>
    </div>
  </form>
</div>