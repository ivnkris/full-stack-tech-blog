<div
  class="position-absolute top-50 start-50 translate-middle text-center w-50"
>
  <form id="login-form">
    <div class="mb-3">
      <input
        type="email"
        class="form-control"
        id="email"
        placeholder="Email address"
      />
    </div>
    <div class="mb-3">
      <input
        type="password"
        class="form-control"
        id="password"
        placeholder="Password"
      />
    </div>
    <div class="mb-3 d-grid gap-2">
      <button type="submit" class="btn btn-primary mb-3">Login</button>
    </div>
  </form>
</div>